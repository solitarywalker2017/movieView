page {
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}

.user, .entry {
  font-weight: 700;
}

.user {
  font-size: 32rpx;
  margin-top: 100rpx;
}

.entry-container {
  border: 1px solid #405f80;
  border-radius: 5px;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  margin-top: 200rpx;
}

.entry {
  font-size: 22rpx;
  color: #405f80;
  line-height: 80rpx;
}
