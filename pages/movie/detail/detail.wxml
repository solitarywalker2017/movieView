<import src="../template/star/temp_movie_star" />
<view class="container">
  <image class="head-img" src="{{movieDetail.movieImg}}" mode="aspectFill" />
  <view class="head-img-hover" data-src="{{movieDetail.movieImg}}" catchtap="viewMoviePostImg">
    <text class="main-title">{{movieDetail.title}}</text>
    <text class="sub-title">{{movieDetail.country + " · "+movieDetail.year}}</text>
    <view class="like">
      <text class="highlight-font">
        {{movieDetail.wishCount}}
      </text>
      <text class="plain-font">
        人喜欢
      </text>
      <text class="highlight-font">
        {{movieDetail.commentsCount}}
      </text>
      <text class="plain-font">
        条评论
      </text>
    </view>
  </view>
  <image class="movie-img" src="{{movieDetail.movieImg}}" data-src="{{movieDetail.movieImg}}" catchtap="viewMoviePostImg"/>
  <view class="summary">
    <view class="original-title">
      <text>{{movieDetail.originalTitle}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">评分</text>
      <template is="star" data="{{...movieDetail.rating}}"></template>
    </view>
    <view class="flex-row">
      <text class="mark">导演</text>
      <text>{{movieDetail.director.name}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">影人</text>
      <text>{{movieDetail.casts}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">类型</text>
      <text>{{movieDetail.genres}}</text>
    </view>
  </view>
  <view class="hr"></view>
  <view class="synopsis">
    <text class="synopsis-font">剧情简介</text>
    <text class="summary-content">{{movieDetail.summary}}</text>
  </view>
  <view class="hr"></view>
  <view class="cast">
    <text class="cast-font"> 影人</text>
    <scroll-view class="cast-imgs" scroll-x="true" style="width:100%">
      <block wx:for="{{movieDetail.castsInfo}}" >
        <view class="cast-container">
          <image class="cast-img" src="{{item.img}}"></image>
          <text class="cast-name">{{item.name}}</text>
        </view>
      </block>
    </scroll-view>
  </view>
</view>