.list-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 5px;
}

.list-container >  text:nth-of-type(1) {
  font-weight: 700;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.list-container >  text:nth-of-type(2) {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20px;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.list-container image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
  margin: auto 0;
}

.list-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.list-author-date image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.list-author-date text {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.list-stat {
  display: flex;
  flex-direction: row;
  line-height: 16px;
  font-size: 13px;
  margin-left: 10px;
}

.list-stat image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.list-stat text {
  vertical-align: middle;
  margin-right: 20px;
}
